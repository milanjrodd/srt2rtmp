{
  "name": "srt2rtmp",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "bun build:encoder && bun build:server",
    "build:server": "bun build ./index.ts --compile --outfile srt2rtmp",
    "build:encoder": "bun build ./encoder.ts --compile --outfile encoder",
    "dev:encoder": "bun build ./encoder.ts --compile --outfile encoder --watch"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
